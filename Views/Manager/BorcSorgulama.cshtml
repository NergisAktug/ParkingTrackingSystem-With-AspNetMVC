@model TakipOtoparkSistemi.Models.MusteriGunlukBilgisi
@{
    ViewBag.Title = "BorcSorgulama";
}

<style>
    #grad1 {
        height: 590px;
        width: 500px;
        margin-left: 298px;
        background-color: #FFF;
    }

    body {
        font-family: Arial, Helvetica, sans-serif;
        background-image: url("/borcsorgulama/image/cevre-otopark.jpg");
        background-repeat: no-repeat, no-repeat;
        background-color: #cccccc;
    }

    .grid-container {
        padding: 16px;
    }

    input[type=text] {
        width: 65%;
        padding: 12px 20px;
        margin: 8px 0px;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    #borcalani {
        margin-top: 27px;
        margin-left: 80px;
        font-size: 18px;
        color: #000;
    }

    /* Create two equal columns that floats next to each other */
    .column {
        margin-left: 30px;
        float: left;
        width: 40%;
        padding: 10px;
        height: 200px;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    .button {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 20px 83px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 15px;
        margin: 4px 2px;
        cursor: pointer;
        opacity: 1;
    }

    .button2 {
        background-color: #F00;
    }

    .button:hover {
        background-color: #DADADA;
        color: black;
    }
</style>

<center><h1 style="color:#FFF">Borç Sorgulama Paneli</h1></center>

<div id="grad1">

    <div class="grid-container" style="margin-left:68px;">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.GPlakaNo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GPlakaNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GPlakaNo, "", new { @class = "text-danger" })
                    <input type="submit" value="Bak" />
                </div>
            </div>
            
        }
    </div>
    <div id="borcalani">
        <p>Borç:@ViewBag.Borc</p><br>
        <p>Id:@ViewBag.Id</p><br>
    </div>

    <div class="row">
        <div class="column" style="background-color:#bbb;">
            <h2 style="font-size:18px;">GİRİŞ</h2>
            @foreach (var giristarihi in ViewBag.GirisTarih)
            {
                <p>@giristarihi</p>
            }
        </div>
        <div class="column" style="background-color:#aaa;">
            <h2 style="font-size:18px;">ÇIKIŞ</h2>
            @foreach (var giristarihi in ViewBag.CikisTarih)
            {
                <p>@giristarihi</p>
            }
        </div>
    </div>
    <div id="butonalani">
        <br>
        <br>
        <button class="button button" type="submit">
            @Html.ActionLink("Ödemeyi Al", "OdemeAl", new { Id = @ViewBag.Id })
        </button>
            <button class="button button2" type="submit">
                @Html.ActionLink("Vazgeç", "LoginYonetici")
            </button>
</div>

</div>


