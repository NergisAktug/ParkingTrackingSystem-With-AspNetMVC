<style>
    #grad1 {
        height: 600px;
        width: 400px;
        margin-left: 350px;
        background-color: #FFF;
        background-image: url("/yoneticisayfasi/image/Blue-Background-Image.jpg");
        background-repeat: no-repeat;
    }

    element.style {
        font-size: 24px;
        font-weight: bold;
    }

    .well {
        min-height: 20px;
        padding: 19px;
        margin-bottom: 20px;
        background-color: #f5f5f5;
        border: 1px solid #e3e3e3;
        border-radius: 4px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
        box-shadow: inset 0 1px 1px
    }

    * {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }

    .button {
        border-radius: 4px;
        background-color: #CCC;
        border: none;
        color: #000;
        text-align: center;
        font-size: 16px;
        font-weight: bold;
        padding: 20px;
        width: 200px;
        transition: all 0.5s;
        cursor: pointer;
        margin: 5px;
    }

        .button span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.3s;
        }

            .button span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -20px;
                transition: 0.5s;
            }

        .button:hover span {
            padding-right: 25px;
        }

            .button:hover span:after {
                opacity: 1;
                right: 0;
            }

    .button1 {
        background-color: #C00;
        color: #FFF;
        font-size: 16px;
        font-weight: bold;
    }
</style>
